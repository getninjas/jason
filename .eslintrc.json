{
  "extends": [
    "airbnb-base",
    "eslint:recommended",
    "plugin:react/recommended"
  ],

  "parser": "babel-eslint",

  "plugins": [
    "babel",
    "import",
    "jest"
  ],

  "rules": {
    "func-names": 0,
    "curly": ["error", "all"]
  },

  "globals": {
    "document": true
  },

  "env": {
    "jest/globals": true
  }
}
